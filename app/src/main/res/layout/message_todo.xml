<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:id="@+id/userNameMessage"
        />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bubble"
    android:layout_below="@id/userNameMessage"
    android:id="@+id/relId"
    android:elevation="2dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="12dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:textSize="20sp"
        android:id="@+id/messageMain"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
       android:layout_marginTop="8dp"
        />
    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/frame"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:id="@+id/imgProg"
            />
        <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_below="@id/messageMain"
            android:id="@+id/messagePic"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"/>
    </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:45 AM"
            android:id="@+id/timeMessage"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_below="@id/frame"
            />


</RelativeLayout>
</RelativeLayout>